							<debug>false</debug>
		                    <showDeprecation>false</showDeprecation>
		        			<showWarnings>false</showWarnings>
						</configuration>
					</plugin>
                    <plugin>
					    <groupId>org.codehaus.mojo</groupId>
					    <artifactId>hibernate3-maven-plugin</artifactId>
					    <executions>
					        <execution>
					        	<!-- Avoid execution -->
					            <phase>none</phase> 
					        </execution>
					    </executions>
					</plugin>
					<plugin>
					    <groupId>org.codehaus.mojo</groupId>
					    <artifactId>dbunit-maven-plugin</artifactId>
					    <executions>
					        <execution>
					        	<!-- Avoid execution -->
					            <phase>none</phase> 
					        </execution>
					    </executions>
					</plugin>
                </plugins>
