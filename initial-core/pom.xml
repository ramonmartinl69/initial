            <id>prod</id>
            <properties>
				<app.deploymentEnvironment>production</app.deploymentEnvironment>
			</properties>
            <build>
            	<defaultGoal>install</defaultGoal>
                <plugins>
                	<plugin>
						<artifactId>maven-compiler-plugin</artifactId>
