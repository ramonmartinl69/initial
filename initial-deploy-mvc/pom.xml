<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.myorg.initial.roo.deploy.mvc</groupId>
  <artifactId>initial-deploy-mvc</artifactId>
  <version>0.1.0.BUILD-SNAPSHOT</version>
  <name>initial-deploy-mvc</name>
  <description>Deploy a version from a Maven Repository</description>
  <packaging>war</packaging>                       
  <url>http://maven.apache.org</url>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <target.version>0.1.0.BUILD-SNAPSHOT</target.version>
  </properties>
  <dependencies>
  	<dependency>
		<groupId>org.myorg.initial.roo.ui.web.mvc</groupId>
		<artifactId>initial-mvc</artifactId>
		<type>war</type>
		<version>${target.version}</version>
	</dependency>
  </dependencies>
  <build>
	<plugins>
		<plugin>
			<artifactId>maven-war-plugin</artifactId>
			<configuration>
				<warName>initial-mvc</warName>
				<overlays>
					<overlay>
						<groupId>org.myorg.initial.roo.ui.web.mvc</groupId>
						<artifactId>initial-mvc</artifactId>
					</overlay>
				</overlays>
			</configuration>
		</plugin>
	</plugins>
  </build>
</project>
